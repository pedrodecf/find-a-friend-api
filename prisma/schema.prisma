generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Org {
  id            String   @id @default(cuid())
  org_name      String
  owner_name    String
  email         String   @unique
  city          City     @relation(fields: [city_name], references: [city_name])
  city_name     String
  cep           String
  phone         String
  password_hash String
  created_at    DateTime @default(now())
  pets          Pet[]

  @@map("orgs")
}

enum Type {
  DOG
  CAT
  BIRD
  RODENT
  REPTILE
  OTHER
}

enum Age {
  BABY
  YOUNG
  ADULT
  SENIOR
  OTHER
}

enum Size {
  SMALL
  MEDIUM
  LARGE
  XLARGE
  OTHER
}

enum Stamina {
  LOW
  MEDIUM
  HIGH
  OTHER
}

enum Autonomy {
  LOW
  MEDIUM
  HIGH
  OTHER
}

model Pet {
  id          String   @id @default(cuid())
  name        String
  description String
  type        Type     @default(OTHER)
  age         Age      @default(OTHER)
  size        Size     @default(OTHER)
  stamina     Stamina  @default(OTHER)
  autonomy    Autonomy @default(OTHER)
  photos      String[]

  org    Org    @relation(fields: [org_id], references: [id])
  org_id String

  city      City   @relation(fields: [city_name], references: [city_name])
  city_name String

  created_at DateTime  @default(now())
  adopted_at DateTime?

  @@map("pets")
}

model City {
  id        String @id @default(cuid())
  city_name String @unique
  orgs      Org[]
  pets      Pet[]

  @@map("cities")
}
